@model webcuoiky2.Models.Hang

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    h2 {
        font-weight: bold;
        letter-spacing: 1px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .container {
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        border: 1px solid #dee2e6;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    dl dt {
        font-size: 16px;
        font-weight: bold;
        color: #2c7a7b;
    }

    dl dd {
        font-size: 16px;
        color: #495057;
        background: #f1f1f1;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .btn {
        padding: 8px 16px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #004085;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #545b62;
        color: white;
    }
</style>
