<h2 class="text-center text-primary mt-4">Danh Sách Hãng Sản Xuất</h2>

<p class="text-right">
    @Html.ActionLink("Thêm Hãng Sản Xuất", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhaCungCap.TenNhaCungCap)
            </th>
           
            <th class="text-center">Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHang)
                </td>
                
                <td class="text-center">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaHang }, new { @class = "btn btn-warning btn-sm mx-1" })
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaHang }, new { @class = "btn btn-info btn-sm mx-1" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaHang }, new { @class = "btn btn-danger btn-sm mx-1" })
                </td>
            </tr>
        }
    </tbody>
</table>