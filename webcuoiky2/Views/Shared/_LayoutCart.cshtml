<script>
    document.addEventListener("DOMContentLoaded", function () {
        const decreaseButtons = document.querySelectorAll(".decrease");
        const increaseButtons = document.querySelectorAll(".increase");
        const quantities = document.querySelectorAll(".quantity-amount");
        const priceCells = document.querySelectorAll("td:nth-child(3)");
        const totalCells = document.querySelectorAll("td:nth-child(5)");

        function updateTotal() {
            let cartTotal = 0;
            quantities.forEach((input, index) => {
                const quantity = parseInt(input.value);
                const price = parseFloat(priceCells[index].innerText.replace("$", ""));
                const total = quantity * price;
                totalCells[index].innerText = `$${total.toFixed(2)}`;
                cartTotal += total;
            });
            document.querySelector("#cart-subtotal").innerText = `$${cartTotal.toFixed(2)}`;
            document.querySelector("#cart-total").innerText = `$${cartTotal.toFixed(2)}`;
        }

        decreaseButtons.forEach((button, index) => {
            button.addEventListener("click", () => {
                if (quantities[index].value > 1) {
                    quantities[index].value--;
                    updateTotal();
                }
            });
        });

        increaseButtons.forEach((button, index) => {
            button.addEventListener("click", () => {
                quantities[index].value++;
                updateTotal();
            });
        });

        updateTotal();
    });
</script>