
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: url('../../images/bglogin.jpg') no-repeat center center fixed;
            /*            background-image: url('../../images/bglogin.jpg');*/
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px 30px;
            border-radius: 10px;
            width: 350px;
            text-align: center;
            color: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3);
        }

            .login-container h2 {
                margin-bottom: 20px;
                font-size: 24px;
            }

            .login-container .input-group {
                position: relative;
                margin-bottom: 20px;
            }

                .login-container .input-group input {
                    width: 80%;
                    padding: 10px 40px;
                    border: 1px solid #4CAF50;
                    border-radius: 5px;
                    background: transparent;
                    color: white;
                }

                    .login-container .input-group input:focus {
                        outline: none;
                        border-color: #76c38f;
                    }

                .login-container .input-group i {
                    position: absolute;
                    top: 10px;
                    left: 10px;
                    color: #4CAF50;
                }

            .login-container .options {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 20px;
                font-size: 14px;
            }

                .login-container .options a {
                    color: #76c38f;
                    text-decoration: none;
                }

                    .login-container .options a:hover {
                        text-decoration: underline;
                    }

            .login-container button {
                width: 100%;
                padding: 10px;
                border: none;
                background: #4CAF50;
                color: white;
                font-size: 16px;
                border-radius: 5px;
                cursor: pointer;
                transition: background 0.3s ease;
            }

                .login-container button:hover {
                    background: #45a049;
                }

            .login-container .register {
                margin-top: 20px;
                font-size: 14px;
            }

                .login-container .register a {
                    color: #76c38f;
                    text-decoration: none;
                    font-weight: bold;
                }

                    .login-container .register a:hover {
                        text-decoration: underline;
                    }

        .icons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .icons a {
                color: white;
                font-size: 20px;
                text-decoration: none;
            }

                .icons a:hover {
                    color: #76c38f;
                }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div class="login-container">

            <div class="icons">
                <a href="/Login/Lclogin" title="Quay lại"><i class="fa fa-arrow-left"></i></a>
                <a href="/Test/Index" title="Trang chủ"><i class="fa fa-home"></i></a>
            </div>
            <h2>Đăng Nhập Quản Trị</h2>
            <form>
                <div class="input-group">
                    <i class="fa fa-user"></i>
                    <input type="text" name="tdn" placeholder="Tên Đăng Nhập" required>
                </div>
                <div class="input-group">
                    <i class="fa fa-lock"></i>
                    <input type="password" name="mk" placeholder="Mật Khẩu" required>
                </div>
                <div class="options">
                    <label><input type="checkbox"> Lưu Mật Khẩu</label>
                    <a href="#">Quên Mật Khẩu?</a>
                </div>
                <button type="submit">Đăng Nhập</button>
            </form>
            <div class="register">
                Đăng Ký Tài Khoản → <a href="#">Đăng Ký</a>
            </div>
        </div>
    }
    </body>
</html>

