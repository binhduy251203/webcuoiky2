<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Chi Tiết Sản Phẩm</h2>

    <div class="card shadow-sm p-4">
        <h4 class="mb-3 text-secondary">Thông Tin Chi Tiết</h4>
        <dl class="row">
            <dt class="col-sm-4">Hãng</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Hang.TenHang)</dd>

            <dt class="col-sm-4">Loại Sản Phẩm</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LoaiSanPham.TenLoai)</dd>

            <dt class="col-sm-4">Nhà Cung Cấp</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NhaCungCap.TenNhaCungCap)</dd>

            <dt class="col-sm-4">Tên Sản Phẩm</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TenSanPham)</dd>

            <dt class="col-sm-4">Giá</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Gia)</dd>

            <dt class="col-sm-4">Ngày Sản Xuất</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NgaySanXuat)</dd>

            <dt class="col-sm-4">Mô Tả</dt>
            <dd class="col-sm-8">
                @*@Html.DisplayFor(model => model.MoTa)*@
                <textarea id="MoTaEditor" name="NoiDung" rows="4" readonly>@Model.MoTa</textarea>
            </dd>

            <dt class="col-sm-4">Ảnh Minh Họa</dt>
            <dd class="col-sm-8">
                <img src="@Url.Content("~/Images/" + Model.AnhMinhHoa)" class="img-thumbnail" alt="Ảnh Minh Họa" width="150" />
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.MaSanPham }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Quay Lại Danh Sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
@section CodeJS {
    <script>
            CKEDITOR.replace("MoTaEditor", {
                allowedContent: true,
            });
    </script>
