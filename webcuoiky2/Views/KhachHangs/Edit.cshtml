<h2 class="text-center text-primary my-4">Chỉnh sửa thông tin khách hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container bg-light p-4 rounded shadow">
        <h4 class="text-secondary mb-4">Thông tin khách hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKhach)

        <div class="mb-3 row">
            @Html.LabelFor(model => model.TenKhach, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.TenKhach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.NgaySinh, "", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-check">
                    <input type="radio" id="gioiTinhNam" name="GioiTinh" value="Nam" class="form-check-input" @if (Model.GioiTinh == "Nam") { <text> checked</text> } />
                    <label class="form-check-label" for="gioiTinhNam">Nam</label>
                </div>
                <div class="form-check">
                    <input type="radio" id="gioiTinhNu" name="GioiTinh" value="Nu" class="form-check-input" @if (Model.GioiTinh == "Nữ") { <text> checked</text> } />
                    <label class="form-check-label" for="gioiTinhNu">Nữ</label>
                </div>
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary px-4 me-2">Lưu</button>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary px-4" })
        </div>
    </div>
}
