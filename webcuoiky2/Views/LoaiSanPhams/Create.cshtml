@model webcuoiky2.Models.LoaiSanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    h2 {
    font-weight: bold;
    color: #007bff;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    letter-spacing: 1px;
}

.form-horizontal {
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

hr {
    border: 1px solid #dee2e6;
}

.form-control {
    border: 1px solid #ced4da;
    border-radius: 5px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-control:focus {
    border-color: #80bdff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

.btn {
    font-size: 16px;
    padding: 8px 15px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-success {
    background-color: #28a745;
    color: #ffffff;
    border: none;
}

.btn-success:hover {
    background-color: #218838;
    transform: scale(1.05);
}

.btn-secondary {
    background-color: #6c757d;
    color: #ffffff;
    border: none;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: scale(1.05);
}

.text-danger {
    font-size: 14px;
    margin-top: 5px;
}

@*@media (max-width: 768px) {
    .form-horizontal {
        padding: 20px;
    }
}*@

</style>

<h2 class="text-center text-primary mt-4">Thêm Loại Sản Phẩm Mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg-light p-4 rounded shadow-sm">
        <h4 class="text-secondary">Thông Tin Loại Sản Phẩm</h4>
        <hr class="mb-4">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row mb-3">
            @Html.LabelFor(model => model.TenLoai, htmlAttributes: new { @class = "col-md-3 col-form-label text-md-end fw-bold" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger mt-2" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-9 offset-md-3">
                <input type="submit" value="Tạo Mới" class="btn btn-success me-2">
                @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

