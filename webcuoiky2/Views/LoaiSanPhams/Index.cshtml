@model IEnumerable<webcuoiky2.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    h2 {
        font-weight: bold;
        letter-spacing: 1px;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .table {
        border-collapse: collapse;
        background: #ffffff;
        margin-bottom: 20px;
        border-radius: 5px;
        overflow: hidden;
    }

        .table thead {
            background: #343a40;
            color: #fff;
            text-transform: uppercase;
        }

        .table tbody tr:hover {
            background: #f8f9fa;
            transition: background 0.3s ease;
        }

        .table td, .table th {
            padding: 15px;
            text-align: center;
        }

    .btn {
        font-size: 14px;
        padding: 5px 10px;
        transition: all 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-warning {
        color: white;
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        color: white;
        background-color: #17a2b8;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-danger {
        color: white;
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>
