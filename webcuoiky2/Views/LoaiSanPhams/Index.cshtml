<h2 class="text-center text-primary mt-4">Danh Sách Loại Sản Phẩm</h2>

<p class="text-end">
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover border shadow-sm">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Tên Loại</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle text-center">
                        @Html.DisplayFor(modelItem => item.TenLoai)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoai }, new { @class = "btn btn-warning btn-sm me-2" })
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaLoai }, new { @class = "btn btn-info btn-sm me-2" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoai }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
